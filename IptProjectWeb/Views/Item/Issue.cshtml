@model IptProjectWeb.Models.BorrowedItem

@{
    ViewData["Title"] = "Issue";
}

@{
    var item = ViewData["Item"] as Item;
}

<h1>Issue</h1>

<h4>BorrowedItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Issue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemName" class="control-label">Item Name</label>
                <input asp-for="@item.Name" class="form-control" disabled="true" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student Id</label>
                <input asp-for="StudentId" class="form-control" placeholder="19k-xxxx" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityBorrowed" class="control-label">Quantity To Issue</label>
                <input asp-for="QuantityBorrowed" class="form-control" />
                <span asp-validation-for="QuantityBorrowed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeToBeReturned" class="control-label">Date To Return</label>
                @{
                    string date = DateTime.Now.ToString("MM-dd-yyyy");
                }
                <input asp-for="TimeToBeReturned" class="form-control" placeholder="Month-Date-Year E.g. 5-10-2022" value="@date"/>
                <span asp-validation-for="TimeToBeReturned" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Issue" class="btn btn-primary" asp-route-itemId="@item.Id" />
                <a asp-action="Index" class="btn text-primary bg-light">Back to List</a>

            </div>
        </form>
    </div>
</div>

